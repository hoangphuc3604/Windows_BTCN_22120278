<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Windows_22120278.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Windows_22120278"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Windows_22120278">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" x:Name="TitleBarRow"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Grid x:Name="CustomTitleBar" 
              Grid.Row="0"
              Height="32"
              Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- App Icon and Title -->
            <StackPanel Grid.Column="0" 
                       Orientation="Horizontal" 
                       Margin="12,0,12,0"
                       VerticalAlignment="Center">
                <FontIcon Glyph="&#xE7C3;" 
                         FontFamily="Segoe Fluent Icons" 
                         FontSize="16"
                         x:Name="AppIcon"/>
                <TextBlock Text="Drawing App" 
                          FontSize="12" 
                          Margin="8,0,0,0"
                          VerticalAlignment="Center"
                          x:Name="AppTitle"/>
            </StackPanel>

            <!-- Drag Region -->
            <Grid Grid.Column="1" 
                  Background="Transparent"
                  x:Name="DragRegion"/>
        </Grid>

        <NavigationView x:Name="NavView" 
                        Grid.Row="1"
                        IsBackButtonVisible="Auto"
                        IsSettingsVisible="True"
                        PaneDisplayMode="Left"
                        CompactModeThresholdWidth="641"
                        ExpandedModeThresholdWidth="1008">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Profiles" Icon="People" Tag="Profiles"/>
                <NavigationViewItem Content="Dashboard" Icon="Library" Tag="Dashboard"/>
            </NavigationView.MenuItems>
            
            <Frame x:Name="ContentFrame" />
        </NavigationView>
    </Grid>
</Window>
