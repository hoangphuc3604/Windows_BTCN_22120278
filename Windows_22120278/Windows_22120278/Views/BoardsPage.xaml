<Page
    x:Class="Windows_22120278.Views.BoardsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:Windows_22120278_Data.models"
    x:Name="PageRoot">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Profile Name and Back Button -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Click="BackButton_Click"
                HorizontalAlignment="Left"
                CornerRadius="4"
                Padding="12,8"
                Margin="0,0,16,0"
                Style="{StaticResource DefaultButtonStyle}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE72B;" FontFamily="Segoe Fluent Icons" FontSize="16"/>
                    <TextBlock Text="Back" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <TextBlock
                Grid.Column="1"
                x:Name="ProfileNameTextBlock"
                Text="{x:Bind ViewModel.Profile.Name, Mode=OneWay}"
                VerticalAlignment="Center"
                Style="{StaticResource TitleTextBlockStyle}"
                FontSize="24"/>
        </Grid>

        <!-- TabView with Boards and Templates tabs -->
        <TabView Grid.Row="1" x:Name="MainTabView">
            <!-- Boards Tab -->
            <TabViewItem Header="Boards">
                <TabViewItem.IconSource>
                    <SymbolIconSource Symbol="Document" />
                </TabViewItem.IconSource>
                <Grid Padding="0,16,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button
                        Grid.Row="0"
                        Command="{x:Bind ViewModel.CreateBoardCommand}"
                        HorizontalAlignment="Left"
                        CornerRadius="4"
                        Padding="12,8"
                        Margin="0,0,0,16"
                        Style="{StaticResource AccentButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE710;" FontFamily="Segoe Fluent Icons" FontSize="16"/>
                            <TextBlock Text="Create New Board" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <ListView
                        Grid.Row="1"
                        ItemsSource="{x:Bind ViewModel.Boards, Mode=OneWay}"
                        SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:DrawingBoard">
                                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="12"
                                        Margin="0,4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                            <TextBlock
                                                Text="{x:Bind Name}"
                                                Style="{StaticResource BodyTextBlockStyle}"
                                                FontSize="16"
                                                FontWeight="SemiBold"
                                                Margin="0,0,0,4"/>
                                            <TextBlock
                                                Text="{x:Bind CreatedDate}"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        </StackPanel>

                                        <Button
                                            Grid.Column="1"
                                            Click="OpenDrawingButton_Click"
                                            Tag="{x:Bind}"
                                            HorizontalAlignment="Right"
                                            CornerRadius="4"
                                            Padding="12,8"
                                            Margin="0,0,8,0"
                                            Style="{StaticResource AccentButtonStyle}">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon Glyph="&#xE91F;" FontFamily="Segoe Fluent Icons" FontSize="16"/>
                                                <TextBlock Text="Open Drawing" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>

                                        <Button
                                            Grid.Column="2"
                                            Command="{Binding ElementName=PageRoot, Path=ViewModel.DeleteBoardCommand}"
                                            CommandParameter="{x:Bind}"
                                            HorizontalAlignment="Right"
                                            CornerRadius="4"
                                            Padding="12,8"
                                            Style="{StaticResource DefaultButtonStyle}">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon Glyph="&#xE74D;" FontFamily="Segoe Fluent Icons" FontSize="16"/>
                                                <TextBlock Text="Delete" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabViewItem>

            <!-- Templates Tab -->
            <TabViewItem Header="Templates">
                <TabViewItem.IconSource>
                    <SymbolIconSource Symbol="Favorite" />
                </TabViewItem.IconSource>
                <Grid Padding="0,16,0,0">
                    <GridView
                        x:Name="TemplatesGridView"
                        ItemsSource="{x:Bind ViewModel.Templates, Mode=OneWay}"
                        SelectionMode="None"
                        ContainerContentChanging="TemplatesGridView_ContainerContentChanging">
                        <GridView.ItemTemplate>
                            <DataTemplate x:DataType="models:ShapeTemplate">
                                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="12"
                                        Margin="4"
                                        Width="200"
                                        Height="260">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="120"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Canvas Grid.Row="0"
                                                x:Name="TemplatePreviewCanvas"
                                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                                Margin="0,0,0,8"
                                                Width="176"
                                                Height="112"
                                                HorizontalAlignment="Center"/>

                                        <TextBlock
                                            Grid.Row="1"
                                            Text="{x:Bind Name}"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            TextTrimming="CharacterEllipsis"
                                            Margin="0,0,0,4"/>

                                        <TextBlock
                                            Grid.Row="2"
                                            Text="{x:Bind Type}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Margin="0,0,0,8"/>

                                        <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="8">
                                            <Button
                                                Click="PreviewTemplateButton_Click"
                                                Tag="{x:Bind}"
                                                HorizontalAlignment="Stretch"
                                                HorizontalContentAlignment="Center"
                                                CornerRadius="4"
                                                Padding="8,6"
                                                Style="{StaticResource AccentButtonStyle}">
                                                <TextBlock Text="Preview" VerticalAlignment="Center"/>
                                            </Button>

                                            <Button
                                                Command="{Binding ElementName=PageRoot, Path=ViewModel.DeleteTemplateCommand}"
                                                CommandParameter="{x:Bind}"
                                                HorizontalAlignment="Stretch"
                                                HorizontalContentAlignment="Center"
                                                CornerRadius="4"
                                                Padding="8,6"
                                                Style="{StaticResource DefaultButtonStyle}">
                                                <FontIcon Glyph="&#xE74D;" FontFamily="Segoe Fluent Icons" FontSize="14"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </Grid>
            </TabViewItem>
        </TabView>
    </Grid>
</Page>

