<Page
    x:Class="Windows_22120278.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:vm="using:Windows_22120278.ViewModels">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Spacing="12">
            <TextBlock Text="Total Boards:" VerticalAlignment="Center" />
            <TextBlock Text="{Binding TotalBoards, Mode=OneWay}" VerticalAlignment="Center" FontWeight="Bold" />
        </StackPanel>

        <lvc:PieChart Grid.Row="1"
                      Series="{Binding ShapeDistribution}"
                      LegendPosition="Right">
        </lvc:PieChart>
    </Grid>
</Page>