<ContentDialog
    x:Class="Windows_22120278.Views.EditProfileDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Edit Profile"
    PrimaryButtonText="Save"
    CloseButtonText="Cancel"
    DefaultButton="Primary">

    <StackPanel Spacing="16" MinWidth="400">
        <TextBox x:Name="NameTextBox"
                 Header="Profile Name"
                 PlaceholderText="Enter profile name" />

        <CheckBox x:Name="IsDarkThemeCheckBox"
                  Content="Default Theme: Dark" />

        <NumberBox x:Name="WidthNumberBox"
                   Header="Default Board Width"
                   Minimum="100"
                   Maximum="5000"
                   Value="800"
                   SpinButtonPlacementMode="Inline" />

        <NumberBox x:Name="HeightNumberBox"
                   Header="Default Board Height"
                   Minimum="100"
                   Maximum="5000"
                   Value="600"
                   SpinButtonPlacementMode="Inline" />
    </StackPanel>
</ContentDialog>

