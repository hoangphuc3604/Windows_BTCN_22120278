<Page
    x:Class="Windows_22120278.Views.ProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:Windows_22120278_Data.models"
    x:Name="PageRoot">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button
            Grid.Row="0"
            Content="Add Profile"
            Command="{x:Bind ViewModel.AddDefaultProfileCommand}"
            HorizontalAlignment="Left"
            Margin="0,0,0,20"
            Style="{StaticResource AccentButtonStyle}"/>

        <ListView
            Grid.Row="1"
            ItemsSource="{x:Bind ViewModel.Profiles, Mode=OneWay}"
            SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Profile">
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Text="{x:Bind Name}"
                            VerticalAlignment="Center"
                            Style="{StaticResource BodyTextBlockStyle}"
                            FontSize="16"/>

                        <Button
                            Grid.Column="1"
                            Content="Open Drawing"
                            Click="OpenDrawingButton_Click"
                            Tag="{x:Bind}"
                            HorizontalAlignment="Right"
                            Margin="0,0,8,0"
                            Style="{StaticResource AccentButtonStyle}"/>

                        <Button
                            Grid.Column="2"
                            Content="Delete"
                            Click="DeleteButton_Click"
                            Tag="{x:Bind}"
                            HorizontalAlignment="Right"
                            Style="{StaticResource DefaultButtonStyle}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

