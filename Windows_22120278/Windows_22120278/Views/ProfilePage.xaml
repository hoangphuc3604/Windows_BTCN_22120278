<Page
    x:Class="Windows_22120278.Views.ProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:Windows_22120278_Data.models"
    xmlns:converters="using:Windows_22120278.Converters"
    x:Name="PageRoot">

    <Page.Resources>
        <converters:NullToBooleanConverter x:Key="NullToBooleanConverter"/>
        <converters:BoolToThemeConverter x:Key="BoolToThemeConverter"/>
    </Page.Resources>

    <ScrollViewer>
        <Grid Padding="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Spacing="12" Margin="0,0,0,32">
                <TextBlock Text="Drawing Application"
                          Style="{StaticResource DisplayTextBlockStyle}"
                          FontSize="48"
                          FontWeight="Bold"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Create and manage your drawing profiles. Select a profile to start drawing."
                          Style="{StaticResource BodyTextBlockStyle}"
                          FontSize="16"
                          HorizontalAlignment="Center"
                          TextAlignment="Center"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          MaxWidth="600"
                          TextWrapping="Wrap"/>
            </StackPanel>

            <Button
                Grid.Row="1"
                Command="{x:Bind ViewModel.CreateProfileCommand}"
                HorizontalAlignment="Left"
                CornerRadius="4"
                Padding="12,8"
                Margin="0,0,0,16"
                Style="{StaticResource AccentButtonStyle}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE710;" FontFamily="Segoe Fluent Icons" FontSize="16"/>
                    <TextBlock Text="Create New Profile" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <TextBlock
                Grid.Row="2"
                Text="Profiles"
                Style="{StaticResource TitleTextBlockStyle}"
                FontSize="24"
                Margin="0,0,0,12"/>

            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListView
                    Grid.Row="0"
                    ItemsSource="{x:Bind ViewModel.Profiles, Mode=OneWay}"
                    SelectionMode="Single"
                    SelectedItem="{x:Bind ViewModel.SelectedProfile, Mode=TwoWay}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Profile">
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="16"
                                    Margin="0,4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                        <TextBlock
                                            Text="{x:Bind Name}"
                                            VerticalAlignment="Center"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            FontSize="18"
                                            FontWeight="SemiBold"
                                            Margin="0,0,0,4"/>
                                    <TextBlock
                                        Text="{Binding IsDefaultThemeDark, Converter={StaticResource BoolToThemeConverter}}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>

                                    <Button
                                        Grid.Column="1"
                                        Command="{Binding ElementName=PageRoot, Path=ViewModel.EditProfileCommand}"
                                        CommandParameter="{x:Bind}"
                                        HorizontalAlignment="Right"
                                        CornerRadius="4"
                                        Padding="12,8"
                                        Margin="0,0,8,0"
                                        Style="{StaticResource DefaultButtonStyle}">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE70F;" FontFamily="Segoe Fluent Icons" FontSize="16"/>
                                            <TextBlock Text="Edit" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>

                                    <Button
                                        Grid.Column="2"
                                        Command="{Binding ElementName=PageRoot, Path=ViewModel.DeleteProfileCommand}"
                                        CommandParameter="{x:Bind}"
                                        HorizontalAlignment="Right"
                                        CornerRadius="4"
                                        Padding="12,8"
                                        Style="{StaticResource DefaultButtonStyle}">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE74D;" FontFamily="Segoe Fluent Icons" FontSize="16"/>
                                            <TextBlock Text="Delete" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Button
                    Grid.Row="1"
                    Command="{Binding StartDrawingCommand}"
                    IsEnabled="{Binding SelectedProfile, Converter={StaticResource NullToBooleanConverter}}"
                    HorizontalAlignment="Center"
                    CornerRadius="4"
                    Padding="24,12"
                    Margin="0,24,0,0"
                    Style="{StaticResource AccentButtonStyle}"
                    FontSize="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE70F;" FontFamily="Segoe Fluent Icons" FontSize="20"/>
                        <TextBlock Text="Start Drawing" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>

