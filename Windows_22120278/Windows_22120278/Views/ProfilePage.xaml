<Page
    x:Class="Windows_22120278.Views.ProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:Windows_22120278_Data.models"
    x:Name="PageRoot">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button
            Grid.Row="0"
            Command="{x:Bind ViewModel.AddDefaultProfileCommand}"
            HorizontalAlignment="Left"
            CornerRadius="4"
            Padding="12,8"
            Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <FontIcon Glyph="&#xE710;" FontFamily="Segoe Fluent Icons" FontSize="16"/>
                <TextBlock Text="Add Profile" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

        <ListView
            Grid.Row="1"
            ItemsSource="{x:Bind ViewModel.Profiles, Mode=OneWay}"
            SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Profile">
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                Text="{x:Bind Name}"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyTextBlockStyle}"
                                FontSize="16"
                                Margin="0,0,12,0"/>

                            <Button
                                Grid.Column="1"
                                Click="EditButton_Click"
                                Tag="{x:Bind}"
                                HorizontalAlignment="Right"
                                CornerRadius="4"
                                Padding="12,8"
                                Margin="0,0,8,0"
                                Style="{StaticResource DefaultButtonStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE70F;" FontFamily="Segoe Fluent Icons" FontSize="16"/>
                                    <TextBlock Text="Edit" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button
                                Grid.Column="2"
                                Click="ManageBoardsButton_Click"
                                Tag="{x:Bind}"
                                HorizontalAlignment="Right"
                                CornerRadius="4"
                                Padding="12,8"
                                Margin="0,0,8,0"
                                Style="{StaticResource AccentButtonStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8A5;" FontFamily="Segoe Fluent Icons" FontSize="16"/>
                                    <TextBlock Text="Manage Boards" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button
                                Grid.Column="3"
                                Click="DeleteButton_Click"
                                Tag="{x:Bind}"
                                HorizontalAlignment="Right"
                                CornerRadius="4"
                                Padding="12,8"
                                Style="{StaticResource DefaultButtonStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE74D;" FontFamily="Segoe Fluent Icons" FontSize="16"/>
                                    <TextBlock Text="Delete" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

