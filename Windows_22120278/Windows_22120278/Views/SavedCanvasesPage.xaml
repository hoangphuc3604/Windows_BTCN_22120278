<Page
    x:Class="Windows_22120278.Views.SavedCanvasesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:Windows_22120278_Data.models"
    x:Name="PageRoot">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <BreadcrumbBar Grid.Row="0"
                       x:Name="BreadcrumbBarControl"
                       Margin="0,0,0,16"
                       ItemsSource="{x:Bind BreadcrumbItems, Mode=OneWay}"
                       ItemClicked="BreadcrumbBar_ItemClicked" />

        <ListView
            Grid.Row="1"
            ItemsSource="{x:Bind ViewModel.Boards, Mode=OneWay}"
            SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:DrawingBoard">
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="16"
                            Margin="0,4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock
                                    Text="{x:Bind Name}"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    FontSize="18"
                                    FontWeight="SemiBold"
                                    Margin="0,0,0,4"/>
                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                    <Run Text="Created: "/>
                                    <Run Text="{x:Bind CreatedDate}"/>
                                </TextBlock>
                            </StackPanel>

                            <Button
                                Grid.Column="1"
                                Command="{Binding ElementName=PageRoot, Path=ViewModel.OpenDrawingCommand}"
                                CommandParameter="{x:Bind}"
                                HorizontalAlignment="Right"
                                CornerRadius="4"
                                Padding="12,8"
                                Margin="0,0,8,0"
                                Style="{StaticResource AccentButtonStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE91F;" FontFamily="Segoe Fluent Icons" FontSize="16"/>
                                    <TextBlock Text="Open" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button
                                Grid.Column="2"
                                Command="{Binding ElementName=PageRoot, Path=ViewModel.DeleteBoardCommand}"
                                CommandParameter="{x:Bind}"
                                HorizontalAlignment="Right"
                                CornerRadius="4"
                                Padding="12,8"
                                Style="{StaticResource DefaultButtonStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE74D;" FontFamily="Segoe Fluent Icons" FontSize="16"/>
                                    <TextBlock Text="Delete" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

