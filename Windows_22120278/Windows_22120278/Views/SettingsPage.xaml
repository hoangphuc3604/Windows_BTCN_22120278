<Page
    x:Class="Windows_22120278.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Windows_22120278.ViewModels">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <TextBlock Grid.Row="0"
                   Text="Settings"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0,0,0,24"/>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="24">
                <!-- Theme Section -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Appearance"
                                  FontSize="18"
                                  FontWeight="SemiBold"/>

                        <TextBlock Text="Choose your preferred theme"
                                  FontSize="14"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                        <RadioButton x:Name="LightThemeRadio"
                                    Content="Light"
                                    GroupName="ThemeGroup"
                                    Checked="LightThemeRadio_Checked"
                                    Margin="0,8,0,0"/>

                        <RadioButton x:Name="DarkThemeRadio"
                                    Content="Dark"
                                    GroupName="ThemeGroup"
                                    Checked="DarkThemeRadio_Checked"/>

                        <RadioButton x:Name="SystemThemeRadio"
                                    Content="Use system setting"
                                    GroupName="ThemeGroup"
                                    Checked="SystemThemeRadio_Checked"/>
                    </StackPanel>
                </Border>

                <!-- About Section -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel Spacing="16">
                        <TextBlock Text="About"
                                  FontSize="18"
                                  FontWeight="SemiBold"/>

                        <TextBlock Text="Drawing App"
                                  FontSize="14"/>

                        <TextBlock Text="A WinUI 3 drawing application built with Fluent Design principles."
                                  FontSize="12"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

